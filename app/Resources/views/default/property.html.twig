{% extends 'layout.html.twig' %}

{% block content %}
    <div class="title-panel">
        <img src="{{ asset('img/page-title-background.jpg') }}" alt="title background">
        <div class="title-group">
            <div class="row">
                <h1>Propriétés</h1>
            </div>

        </div>
    </div>
    <!--Find home area start-->
    {#
